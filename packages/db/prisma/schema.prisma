datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pokemon {
  id     Int    @id
  name   String
  height Int?
  weight Int?
  sprite String?
  types  PokemonType[]
  stats  PokemonStat[]
}

model PokemonType {
  id        Int      @id @default(autoincrement())
  pokemonId Int
  slot      Int
  name      String

  pokemon Pokemon @relation(fields: [pokemonId], references: [id], onDelete: Cascade)
}

model PokemonStat {
  id        Int      @id @default(autoincrement())
  pokemonId Int
  name      String
  base      Int
  effort    Int

  pokemon Pokemon @relation(fields: [pokemonId], references: [id], onDelete: Cascade)
}


